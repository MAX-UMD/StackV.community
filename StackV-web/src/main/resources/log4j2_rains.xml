<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="RAINS-Logging">
    <Appenders>
        <Console name="RainsOut" target="SYSTEM_OUT">
            <PatternLayout pattern="%logger{1} [%marker] %level - %msg :: %ex{5}%n" />
        </Console>
        
        <JDBC name="MySQL" tableName="frontend.log">
            <DataSource jndiName="java:jboss/datasources/MysqlDS" />
            <Column name="marker" pattern="%marker" />
            <Column name="timestamp" isEventTimestamp="true" />
            <Column name="level" pattern="%level" />
            <Column name="logger" pattern="%logger" />
            <Column name="message" pattern="%message" />
                       
            <Column name="exception" pattern="%ex{5}" />
            <Column name="referenceUUID" pattern="%X{refUUID}" />
        </JDBC>      
    </Appenders>
    <Loggers>
        <AsyncLogger name="RAINSLogger" level="trace" additivity="false">
            <AppenderRef ref="RainsOut" />
        </AsyncLogger>
        <Root level="warn">
            <AppenderRef ref="RainsOut" />
        </Root>
    </Loggers>
</Configuration>