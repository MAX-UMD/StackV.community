<?xml version="1.0" encoding="UTF-8"?>

<intent xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="intent.xsd">
    <stage name="Connections">
        <group factory="true" name="link">
            <input>
                <name>Connection Name</name>
                <type>text</type>
            </input>
            <input>
                <name>Source</name>
                <type>text</type>
                <size>medium</size>
            </input>
            <input>
                <name>Source VLAN</name>
                <type>text</type>
                <size>small</size>
            </input>
            <input>
                <name>Destination</name>
                <type>text</type>
                <size>medium</size>
            </input>
            <input>
                <name>Destination VLAN</name>
                <type>text</type>
                <size>small</size>
            </input>
        </group>
    </stage>
</intent>
