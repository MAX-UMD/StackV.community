<?xml version="1.0" encoding="UTF-8"?>

<intent xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="intent.xsd">
    <meta>
        <block>subnets</block>            
        <block>vms</block>
        <block condition="openstack-form">gateways</block>
        <block condition="openstack-form">sriovs</block>
    </meta>
    <stage name="Host">
        <input>
            <name>AWS</name>
            <type>button</type>
            <trigger>aws-form</trigger>
        </input>
        <input>
            <name>OpenStack</name>
            <type>button</type>
            <trigger>openstack-form</trigger>
        </input>
    </stage>
    <stage name="Details">
        <group name="network">            
            <input>
                <name>Driver URI</name>
                <type>select</type>
                <source>/drivers</source>
            </input>
            <input>
                <name>Type</name>
                <type>text</type>
            </input>
            <input>
                <name>CIDR</name>
                <type>text</type>
            </input>
        </group>
        <group condition="aws-form" name="direct">
            <input>
                <name>Direct Connect Destination</name>
                <type>text</type>
            </input>
            <input>
                <name>Direct Connect VLAN</name>
                <type>text</type>
            </input>
        </group>
    </stage>
    <stage name="Subnets">
        <group block="subnets" name="subnet">
            <input>
                <name>Name</name>
                <type>text</type>
            </input>
            <input>
                <name>CIDR Block</name>
                <type>text</type>
            </input>
            <input>
                <name>Default Routing</name>
                <type>checkbox</type>
            </input>
            <group factory="true" name="route">
                <input>
                    <name>From</name>
                    <type>text</type>
                </input>
                <input>
                    <name>To</name>
                    <type>text</type>
                </input>
                <input>
                    <name>Next Hop</name>
                    <type>text</type>
                </input>
            </group>
        </group>
    </stage>
</intent>
